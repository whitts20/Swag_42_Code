SRCS =	ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c \
		ft_memchr.c ft_memcmp.c ft_strlen.c ft_strdup.c \
		ft_strlcat.c ft_strchr.c ft_strncat.c \
		ft_strrchr.c ft_strnstr.c ft_strncmp.c \
		ft_atoi.c ft_isalpha.c ft_isdigit.c ft_isalnum.c \
		ft_isprint.c ft_toupper.c ft_tolower.c \
		ft_striteri.c ft_strcat.c ft_strncpy.c \
		ft_strmapi.c ft_substr.c ft_isascii.c \
		ft_strjoin.c ft_strtrim.c ft_split.c ft_itoa.c\
		ft_putchar_fd.c ft_strcpy.c ft_putstr_fd.c \
		ft_putendl_fd.c ft_putnbr_fd.c ft_calloc.c \
		ft_strlcpy.c
DOTO = $(SRCS:.c=.o)

BONUS =	ft_lstadd_back.c ft_lstaddfront.c \
		ft_lstclear.c ft_lstdelone.c \
		ft_lstlast.c ft_lstnew.c ft_lstsize.c
BONUS_DOTO = $(BONUS:.c=.o)

INCS = includes
NAME = libft.a
LIBC = ar -rcs
COMP = gcc
RMVE = rm -f
EFLAGS = -Wall -Wextra -Werror

.c.o:
		$(COMP) $(EFLAGS) -c $< -o $(<:.c=.o) -I $(INCS)

$(NAME): $(DOTO)
		$(LIBC) $(NAME) $(DOTO)

bonus: $(DOTO) $(BONUS_DOTO)
		$(LIBC) $(NAME) $(DOTO) $(BONUS_DOTO)

all: $(NAME)

clean:
		$(RMVE) $(DOTO) $(BONUS_DOTO)

fclean: clean
		$(RMVE) $(NAME)

re: fclean all

.PHONY: all clean fclean re .c.o norm